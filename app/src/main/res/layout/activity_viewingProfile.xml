<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/basicProfileIconsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">


                <ImageView
                    android:id="@+id/profilePicture"
                    android:layout_width="150dp"
                    android:layout_height="135dp"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="184dp"
                    tools:srcCompat="@mipmap/logo" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/goToChat"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/profilePicture"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="Tutor"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    tools:layout_editor_absoluteX="144dp"
                    tools:layout_editor_absoluteY="248dp" />

                <RatingBar
                    android:id="@+id/ratingOfProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/status"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/profilePicture"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4"
                    android:scaleX="0.9"
                    android:scaleY="0.9" />

                <ImageButton
                    android:id="@+id/goToChat"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="49dp"
                    android:layout_toRightOf="@id/profilePicture"
                    android:backgroundTint="@color/White"
                    android:text="Button"
                    tools:layout_editor_absoluteX="133dp"
                    tools:layout_editor_absoluteY="184dp"
                    tools:src="@drawable/chatIcon" />

                <ImageButton
                    android:id="@+id/goToCalender"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="51dp"
                    android:layout_toRightOf="@id/goToChat"
                    android:backgroundTint="@color/White"
                    android:text="Button"
                    tools:layout_editor_absoluteX="271dp"
                    tools:layout_editor_absoluteY="184dp"
                    tools:src="@drawable/calenderIcon" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/bioLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/basicProfileIconsLayout"
                tools:layout_editor_absoluteX="193dp">

                <TextView
                    android:id="@+id/bioTextBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bio: I can tutor students needing help in grade 7-10 math. ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="155dp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/reviewRatingButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bioLayout">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/reviewText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reviews:"
                        android:textSize="30dp" />

                    <ImageButton
                        android:id="@+id/ratingButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="300dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/White"
                        app:srcCompat="@android:drawable/btn_star_big_on" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reviewRatingButtonLayout"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp">

                <ImageView
                    android:id="@+id/studentProfilePicture"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="184dp"
                    tools:srcCompat="@mipmap/logo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/showRating"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/studentProfilePicture"
                    android:gravity="center"
                    android:text="She was amazing in helping me get over a 95 in math for grade 9. She fits my learning style perfectly and she's patient when I do not understand the information."
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16dp"
                    tools:layout_editor_absoluteX="144dp"
                    tools:layout_editor_absoluteY="248dp" />

                <RatingBar
                    android:id="@+id/showRating"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/studentProfilePicture"
                    android:gravity="center"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="5"
                    android:scaleX="0.5"
                    android:scaleY="0.6" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>