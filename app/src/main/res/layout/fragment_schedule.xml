<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    tools:context=".ScheduleFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/ScheduleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textSize="30dp"
            android:background="@color/LightGrey"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:elevation="10dp"/>

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="28dp"
            android:layout_marginTop="-10dp"
            android:text="Saturday, April 20"
            android:textColor="@color/Black"
            android:textSize="35dp"/>
        <TextView
            android:id="@+id/DateInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="• 2:30pm: Meeting with John at library"
            android:textColor="@color/Black"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-145dp"
            android:layout_marginTop="2dp"
            android:text="Edit"
            android:textColor="@color/NavyBlue"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/book_meeting_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="@color/Grey"
            android:text="Book a Meeting" />

        <!--<TextView-->
            android:id="@+id/book_meeting_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Grey"
            android:textSize="20dp"
            android:clickable="true"
            android:paddingLeft="15dp"
            android:paddingBottom="10dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:layout_marginTop="10dp"
            android:text="Book a Meeting" />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/scheduleEdit"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="150dp"
        android:background="@color/Grey"
        android:gravity="center|top"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/DateEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Monday, Jan 5"
            android:textColor="@color/Black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/DateInfoEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:text="• 2:30pm: Meeting with John at library"
            android:textColor="@color/Black"
            android:textSize="20dp" />

    </LinearLayout>


</RelativeLayout>