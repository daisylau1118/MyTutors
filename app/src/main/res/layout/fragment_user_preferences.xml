<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPreferencesFragment">

    <TextView
        android:id="@+id/EditPrefTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/LightGrey"
        android:elevation="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Preferences"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditPrefTitle"
        app:layout_constraintVertical_bias="0.0">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="40dp"
            >

            <TextView
                android:id="@+id/label_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="I am a... "
                android:textColor="@color/Black"
                android:textSize="30dp" />

            <CheckBox
                android:id="@+id/tutor_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_title"
                android:layout_marginTop="10dp"
                android:text="Tutor" />

            <CheckBox
                android:id="@+id/student_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_title"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/tutor_cb"
                android:text="Student" />

            <TextView
                android:id="@+id/subject_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/student_cb"
                android:layout_marginTop="20dp"
                android:text="Subjects"
                android:textColor="@color/Black"
                android:textSize="30dp" />

            <CheckBox
                android:id="@+id/subject_cb_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subject_title"
                android:layout_marginTop="10dp"
                android:text="Math" />

            <CheckBox
                android:id="@+id/subject_cb_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subject_cb_0"
                android:layout_marginTop="5dp"
                android:text="ELA" />

            <CheckBox
                android:id="@+id/subject_cb_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subject_cb_1"
                android:layout_marginTop="5dp"
                android:text="French" />


            <CheckBox
                android:id="@+id/subject_cb_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subject_cb_2"
                android:layout_marginTop="10dp"
                android:text="Social Studies" />

            <CheckBox
                android:id="@+id/subject_cb_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subject_cb_3"
                android:layout_marginTop="5dp"
                android:text="Science" />

            <TextView
                android:id="@+id/level_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subject_cb_4"
                android:layout_marginTop="20dp"
                android:text="Academic level"
                android:textColor="@color/Black"
                android:textSize="30dp" />


            <CheckBox
                android:id="@+id/level_cb_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level_title"
                android:layout_marginTop="10dp"
                android:text="Elementry" />

            <CheckBox
                android:id="@+id/level_cb_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level_cb_1"
                android:layout_marginTop="5dp"
                android:text="Middle School" />

            <CheckBox
                android:id="@+id/level_cb_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level_cb_2"
                android:layout_marginTop="5dp"
                android:text="High School" />

            <CheckBox
                android:id="@+id/level_cb_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level_cb_3"
                android:layout_marginTop="5dp"
                android:text="Post Secondary" />


            <TextView
                android:id="@+id/availability_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level_cb_4"
                android:layout_marginTop="20dp"
                android:text="Availability"
                android:textColor="@color/Black"
                android:textSize="30dp" />

            <CheckBox
                android:id="@+id/availability_cb_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/availability_title"
                android:layout_marginTop="10dp"
                android:text="Monday" />

            <CheckBox
                android:id="@+id/availability_cb_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/availability_cb_0"
                android:layout_marginTop="5dp"
                android:text="Tuesday" />

            <CheckBox
                android:id="@+id/availability_cb_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/availability_cb_1"
                android:layout_marginTop="5dp"
                android:text="Wednesday" />

            <CheckBox
                android:id="@+id/availability_cb_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/availability_cb_2"
                android:layout_marginTop="5dp"
                android:text="Thursday" />

            <CheckBox
                android:id="@+id/availability_cb_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/availability_title"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/availability_cb_0"
                android:text="Friday" />

            <CheckBox
                android:id="@+id/availability_cb_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/availability_cb_4"
                android:layout_marginLeft="88dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/availability_cb_1"
                android:text="Saturday" />

            <CheckBox
                android:id="@+id/availability_cb_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/availability_cb_5"
                android:layout_marginLeft="67dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/availability_cb_2"
                android:text="Sunday" />


            <TextView
                android:id="@+id/other_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/availability_cb_3"
                android:layout_marginTop="20dp"
                android:text="Other"
                android:textColor="@color/Black"
                android:textSize="30dp" />

            <CheckBox
                android:id="@+id/other_cb_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/other_title"
                android:layout_marginTop="10dp"
                android:text="Meet At Home" />

            <CheckBox
                android:id="@+id/other_cb_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/other_cb_0"
                android:layout_marginTop="5dp"
                android:text="Meet in a Public Place" />

            <CheckBox
                android:id="@+id/other_cb_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/other_cb_1"
                android:layout_marginTop="5dp"
                android:text="French Immersion" />

            <CheckBox
                android:id="@+id/other_cb_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/other_cb_2"
                android:layout_marginTop="5dp"
                android:text="Slow Learner" />

            <CheckBox
                android:id="@+id/other_cb_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/other_cb_3"
                android:layout_marginTop="5dp"
                android:text="ADHD/ADD" />

            <CheckBox
                android:id="@+id/other_cb_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/other_cb_4"
                android:layout_marginTop="5dp"
                android:text="Hearing Impaired" />

            <CheckBox
                android:id="@+id/other_cb_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/other_cb_5"
                android:layout_marginTop="5dp"
                android:text="English as a Second Language" />

            <CheckBox
                android:id="@+id/other_cb_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/other_cb_6"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:text="Learning Disability" />
        </RelativeLayout>


    </ScrollView>




</android.support.constraint.ConstraintLayout>