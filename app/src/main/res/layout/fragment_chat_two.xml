<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatFragmentTwo">

    <TextView
        android:id="@+id/ChatTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LightGrey"
        android:elevation="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/chatting_name"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Message"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/editText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChatTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You are now chatting with Lori Brown"
                android:textAlignment="center"
                android:layout_marginTop="90dp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/user_profile_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="110dp"
                    android:background="@color/Transparent"
                    android:scaleX=".5"
                    android:scaleY=".5"
                    android:src="@drawable/tempprofilepic" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="35dp"
                    android:scaleX="4"
                    android:scaleY="4"
                    android:src="@drawable/chat_bubble" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-100dp"
                    android:layout_marginTop="25dp"
                    android:scaleX="2"
                    android:scaleY="2"
                    android:textSize="10dp"
                    android:text="I'm looking for a math tutor. Are you still available sundays?" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="95dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="10dp"
                    android:scaleX="-5"
                    android:scaleY="4"
                    android:src="@drawable/chat_bubble" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-100dp"
                    android:layout_marginTop="20dp"
                    android:scaleX="2"
                    android:scaleY="2"
                    android:text="Yes I am available. Do you want to book a meeting?"
                    android:textSize="10sp" />

                <ImageButton
                    android:id="@+id/profile_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="80dp"
                    android:background="@color/Transparent"
                    android:scaleX=".5"
                    android:scaleY=".5"
                    android:src="@drawable/tempprofilepic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-25dp"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="80dp"
                    android:background="@color/Transparent"
                    android:scaleX=".5"
                    android:scaleY=".5"
                    android:src="@drawable/tempprofilepic" />

                <ImageView
                    android:layout_width="95dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="35dp"
                    android:scaleX="5"
                    android:scaleY="4"
                    android:src="@drawable/chat_bubble" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-100dp"
                    android:layout_marginTop="-35dp"
                    android:scaleX="2"
                    android:scaleY="2"
                    android:textSize="10dp"
                    android:text="Yes can you meet me at the library at 11:00?" />
                <Button
                    android:id="@+id/toast_btn"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@color/Transparent"/>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</android.support.constraint.ConstraintLayout>