<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/Grey"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/searchbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingTop="60dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="90dp"
        android:ems="12"
        android:inputType="textPersonName"
        android:text="Search..."/>

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleY="1.8"
        android:scaleX="1.8"
        android:paddingLeft="30dp"
        android:paddingTop="46dp"
        android:background =""
        app:srcCompat="@drawable/settings"

        />



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="35dp"
        android:layout_height="600dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="340dp"
                android:layout_height="130dp"
                android:background="@color/Grey"
                >
                <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:scaleX="0.65"
                    android:scaleY="0.65"
                    tools:srcCompat="@tools:sample/avatars" />
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/profilePic"
                    android:layout_marginTop="30dp"

                    android:text="John Smith"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tutorLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/profilePic"
                    android:layout_below="@id/name"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="-1dp"
                    android:textSize="15dp"
                    tools:text="Tutor" />
                <RatingBar
                    android:id="@+id/ratingBar1"
                    style="@style/Widget.AppCompat.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_toRightOf="@id/tutorLabel"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="-55dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4"
                    android:scaleX="0.5"
                    android:scaleY="0.5" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="340dp"
                android:layout_height="130dp"
                android:background="@color/Grey"
                android:layout_marginTop="25dp"
                >
                <ImageView
                    android:id="@+id/profilePic2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:scaleX="0.65"
                    android:scaleY="0.65"
                    tools:srcCompat="@tools:sample/avatars" />
                <TextView
                    android:id="@+id/name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/profilePic2"
                    android:layout_marginTop="30dp"

                    android:text="Emma Jones"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tutorLabel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/profilePic2"
                    android:layout_below="@id/name2"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="-1dp"
                    android:textSize="15dp"
                    tools:text="Tutor" />
                <RatingBar
                    android:id="@+id/ratingBar2"
                    style="@style/Widget.AppCompat.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name2"
                    android:layout_toRightOf="@id/tutorLabel2"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="-55dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4"
                    android:scaleX="0.5"
                    android:scaleY="0.5" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="340dp"
                android:layout_height="130dp"
                android:background="@color/Grey"
                android:layout_marginTop="25dp"
                >
                <ImageView
                    android:id="@+id/profilePic3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:scaleX="0.65"
                    android:scaleY="0.65"
                    tools:srcCompat="@tools:sample/avatars" />
                <TextView
                    android:id="@+id/name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/profilePic3"
                    android:layout_marginTop="30dp"

                    android:text="Emma Jones"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tutorLabel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/profilePic3"
                    android:layout_below="@id/name3"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="-1dp"
                    android:textSize="15dp"
                    tools:text="Tutor" />
                <RatingBar
                    android:id="@+id/ratingBar3"
                    style="@style/Widget.AppCompat.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name3"
                    android:layout_toRightOf="@id/tutorLabel3"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="-55dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4"
                    android:scaleX="0.5"
                    android:scaleY="0.5" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="340dp"
                android:layout_height="130dp"
                android:background="@color/Grey"
                android:layout_marginTop="25dp"
                >
                <ImageView
                    android:id="@+id/profilePic4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:scaleX="0.65"
                    android:scaleY="0.65"
                    tools:srcCompat="@tools:sample/avatars" />
                <TextView
                    android:id="@+id/name4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/profilePic4"
                    android:layout_marginTop="30dp"

                    android:text="Emma Jones"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tutorLabel4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/profilePic4"
                    android:layout_below="@id/name4"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="-1dp"
                    android:textSize="15dp"
                    tools:text="Tutor" />
                <RatingBar
                    android:id="@+id/ratingBar4"
                    style="@style/Widget.AppCompat.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name4"
                    android:layout_toRightOf="@id/tutorLabel4"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="-55dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4"
                    android:scaleX="0.5"
                    android:scaleY="0.5" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>





</RelativeLayout>

